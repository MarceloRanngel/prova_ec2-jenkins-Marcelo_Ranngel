pipeline {
    agent any
    environment {
        workspaceN2 = '$WORKSPACE/prova_n2_2_app_fast'
    }
    stages {
        stage('Preparando Workspace') {
            steps {
                echo 'Criando Gradle Wrapper...'
                dir('$workspaceN2'){
                    sh 'gradle wrapper'
                }

            }

        }

        stage('Testes Unitarios') {
            steps{
                echo 'Executando Testes Unitarios...'
                dir('$workspaceN2'){
                    sh '$workspaceN2/gradlew test'
                }
            }
        }

        stage('Build APK'){
            steps{
                echo 'Contruindo APK da Aplicação...'
                dir('$workspaceN2'){
                    sh '$workspaceN2/gradlew assembleRelease'
                }
            }
        }

        stage('Arquivar APK'){
            steps{
                echo 'Arquivando APK gerada...'
                dir('$workspaceN2'){
                    archiveArtifacts artifacts: '**/release-unsigned.apk', fingerprint: true , allowEmptyArchive: false
                }
            }
        }
    }
}