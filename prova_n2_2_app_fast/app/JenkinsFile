pipeline {
    agent any
    environment {
        workspaceN2 = '$WORKSPACE/app'
    }
    stages {
        stage('Preparando Workspace') {
            steps {
                echo 'Criando Gradle Wrapper...'
                dir("$workspaceN2") {
                    sh 'gradle wrapper'
                }
            }

        }

        stage('Testes Unitarios') {
            steps{
                echo 'Executando Testes Unitarios...'
                dir("$workspaceN2"){
                    sh './gradlew test'
                }
            }
        }
    }
}